{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-set-title",
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "/etc/locale.gen"
        },
        {
          "path": "/usr/share/X11/xkb/rules/base.xml"
        },
        {
          "path": "/usr/share/zoneinfo/zone.tab"
        }
      ]
    },
    "shell:default"
  ]
}